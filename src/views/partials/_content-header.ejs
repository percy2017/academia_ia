<div class="card-header d-flex justify-content-between align-items-center">
  <h5 class="mb-0"><%= title %></h5>
  
  <% if (typeof showTTS !== 'undefined' && showTTS) { %>
    <div class="d-flex align-items-center">
      <!-- Controles de Audio TTS -->
      <div id="tts-controls" class="btn-group btn-group-sm" role="group" aria-label="Controles de narración">
        <button id="tts-play-btn" class="btn btn-light" title="Escuchar"><i class="bi bi-play-circle-fill"></i></button>
        <button id="tts-pause-btn" class="btn btn-light" title="Pausar" style="display: none;"><i class="bi bi-pause-circle-fill"></i></button>
        <button id="tts-stop-btn" class="btn btn-light" title="Detener" style="display: none;"><i class="bi bi-stop-circle-fill"></i></button>
      </div>
      
      <% if (typeof showLessonToggle !== 'undefined' && showLessonToggle) { %>
        <!-- Botón para Ocultar/Mostrar Lecciones -->
        <button id="toggle-lessons-btn" class="btn btn-sm btn-light ms-2" title="Ocultar/Mostrar Lecciones">
          <i class="bi bi-layout-sidebar-reverse"></i>
        </button>
      <% } %>
    </div>
  <% } %>
</div>
