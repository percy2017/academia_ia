<!doctype html>
<html lang="es" data-bs-theme="auto">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css"/>
  <%- include('../partials/theme-script-loader') %>
  <style>
    html,
    body {
      height: 100%;
    }

    .form-signin {
      max-width: 330px;
      padding: 1rem;
    }

    .form-signin .form-floating:focus-within {
      z-index: 2;
    }

    .form-signin input[type="email"] {
      margin-bottom: -1px;
      border-bottom-right-radius: 0;
      border-bottom-left-radius: 0;
    }

    .form-signin input[type="tel"] { /* Estilo para el nuevo campo de teléfono */
      margin-bottom: -1px;
      border-top-left-radius: 0;
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
      border-bottom-left-radius: 0;
    }
    
    .form-signin input[name="password"] { /* Para el campo de contraseña en registro */
      margin-bottom: -1px;
      border-top-left-radius: 0;
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
      border-bottom-left-radius: 0;
    }

    .form-signin input[name="confirmPassword"] { /* Asumiendo que añadirás confirmación de contraseña */
      margin-bottom: 10px;
      border-top-left-radius: 0;
      border-top-right-radius: 0;
    }
  </style>
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary">
  <main class="form-signin w-100 m-auto">
    <form method="POST" action="/auth/register">
      <div class="text-center mb-4">
        <i class="bi bi-mortarboard-fill" style="font-size: 3rem;"></i>
        <h1 class="h3 mb-3 fw-normal">Academia AI</h1>
        <p>Crear una cuenta nueva</p>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

      <div class="form-floating">
        <input type="text" class="form-control" id="name" name="name" placeholder="Nombre Completo" required>
        <label for="name">Nombre Completo</label>
      </div>
      <div class="form-floating">
        <input type="email" class="form-control" id="email" name="email" placeholder="nombre@ejemplo.com" required>
        <label for="email">Correo Electrónico</label>
      </div>
      <div class="form-floating">
        <input type="tel" class="form-control" id="phone" name="phone" placeholder="Número de Teléfono (Opcional)">
        <label for="phone">Número de Teléfono (Opcional)</label>
      </div>
      <div class="form-floating position-relative">
        <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña" required>
        <label for="password">Contraseña</label>
        <span class="position-absolute top-50 end-0 translate-middle-y pe-3" onclick="togglePasswordVisibility('password', 'togglePasswordIcon')" style="cursor: pointer;">
          <i class="bi bi-eye-slash-fill" id="togglePasswordIcon"></i>
        </span>
      </div>
      <!-- Podrías añadir un campo para confirmar contraseña si es necesario -->

      <button class="btn btn-primary w-100 py-2 mt-3" type="submit">Registrarse</button>
      <p class="mt-3 mb-1 text-center">
        ¿Ya tienes una cuenta? <a href="/auth/login">Inicia Sesión</a>
      </p>
      <p class="mt-5 mb-3 text-body-secondary text-center">&copy; Academia AI - 2023–<%= new Date().getFullYear() %></p>
    </form>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
  <script>
    function togglePasswordVisibility(passwordFieldId, iconId) {
      const passwordField = document.getElementById(passwordFieldId);
      const icon = document.getElementById(iconId);
      if (passwordField.type === "password") {
        passwordField.type = "text";
        icon.classList.remove("bi-eye-slash-fill");
        icon.classList.add("bi-eye-fill");
      } else {
        passwordField.type = "password";
        icon.classList.remove("bi-eye-fill");
        icon.classList.add("bi-eye-slash-fill");
      }
    }

    // intl-tel-input initialization
    const phoneInputFieldRegister = document.querySelector("#phone");
    if (phoneInputFieldRegister) {
      const phoneInputRegister = window.intlTelInput(phoneInputFieldRegister, {
        utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        initialCountry: "auto",
        geoIpLookup: callback => {
          fetch("https://ipapi.co/json")
            .then(res => res.json())
            .then(data => callback(data.country_code))
            .catch(() => callback("us")); // Fallback to US or your preferred default
        },
        nationalMode: false, // Guarda el número en formato internacional
        // separateDialCode: true, // Muestra el código de país separado
        // autoPlaceholder: "aggressive",
        preferredCountries: ['bo', 'pe', 'cl', 'ar', 'br', 'us', 'es'], // Bolivia, Peru, Chile, Argentina, Brazil, USA, Spain
        customPlaceholder: function(selectedCountryPlaceholder, selectedCountryData) {
          return "e.g. " + selectedCountryPlaceholder;
        }
      });

      // Para asegurar que el valor completo (con prefijo) se envíe,
      // podrías escuchar el evento submit del formulario y actualizar el valor del input.
      // O, si usas un input oculto, llenarlo.
      // Por simplicidad, asumiremos que el usuario entiende que debe incluir el prefijo
      // o que la librería modifica el valor del input directamente si no está en nationalMode.
      // Para un manejo más robusto, se podría hacer:
      const formRegister = phoneInputFieldRegister.closest("form");
      if (formRegister) {
        formRegister.addEventListener("submit", function() {
          phoneInputFieldRegister.value = phoneInputRegister.getNumber();
        });
      }
    }
  </script>
</body>
</html>
